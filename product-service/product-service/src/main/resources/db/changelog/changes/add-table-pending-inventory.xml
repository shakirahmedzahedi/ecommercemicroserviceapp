<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- changeset 1: create product table -->
    <changeSet id="9-create-pending-inventory-table" author="shakir">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="pending_inventory"/>
            </not>
        </preConditions>
        <createTable tableName="pending_inventory">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>




